{
  "name": "mdapi",
  "version": "1.0.2",
  "description": "Markdown api documentation generator",
  "main": "index.js",
  "author": "muji",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tmpfs/mdapi/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tmpfs/mdapi.git"
  },
  "keywords": [
    "markdown",
    "commonmark",
    "docs",
    "documentation",
    "comments",
    "api",
    "generator"
  ],
  "dependencies": {
    "cli-argparse": "~1.1.1",
    "comment-parser": "~0.4.0",
    "string-repeater": "~1.0.3"
  },
  "devDependencies": {
    "chai": "~3.5.0",
    "coveralls": "~2.11.6",
    "istanbul": "~0.4.2",
    "mocha": "~2.4.5"
  },
  "scripts": {
    "clean": "rm -rf coverage target",
    "readme": "mdp --force -v",
    "lint": "jshint . && jscs .",
    "docs": "npm run example && npm run readme",
    "example": "mdp --force -v -i doc/example.json -o EXAMPLE.md",
    "pretest": "rm -rf target && mkdir target",
    "test": "NODE_env=test mocha ${SPEC:-test/spec}",
    "precover": "npm run pretest",
    "cover": "NODE_ENV=test istanbul cover _mocha -- ${SPEC:-test/spec}",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "mdp": {
    "title": "Markdown API",
    "pedantic": true,
    "include": "doc/readme",
    "require": "lib",
    "links": "links.md",
    "toc": "Table of Contents",
    "base": "https://github.com/tmpfs/mdapi",
    "partial": [
      {
        "inc": [
          "introduction.md",
          "install.md"
        ]
      },
      {
        "title": "Usage",
        "bin": "./bin/mdapi -h",
        "type": "code"
      },
      {
        "inc": [
          "usage.md",
          "tags.md",
          "cues.md"
        ]
      },
      {
        "bin": "./bin/mdapi index.js lib/conf.js --level=2 --title=API"
      },
      {
        "inc": [
          "developer.md"
        ]
      }
    ]
  }
}
